<Window x:Class="MyPasswordManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPasswordManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Title="Login" Height="95" Width="200">
    <Grid>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordTextbox" Margin="10,26,10,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="10,49,0,10" Click="Button_Click" IsDefault="True" />
        <Label x:Name="InvalidPasswordLabel" Content="" Margin="48,46,114,7"/>
    </Grid>
</Window>
